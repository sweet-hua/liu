<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/jumptothird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jumptothird"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/secondText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="433dp"
        android:text="第二个活动"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/jumptothird"
        app:layout_constraintTop_toBottomOf="@+id/jumptothird" />

</android.support.constraint.ConstraintLayout>
